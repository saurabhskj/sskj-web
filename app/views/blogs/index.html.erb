<div class="" style="margin-left: 100px; margin-right: 100px; background-color: transparent; height: 400px; border-color: transparent">
  <div  style="font-family: Allura; text-align: center; font-size: 60px; color: #2d6987"> Posts</div>

  <div class="row" style="padding-top: 5%; margin-left: 5%; margin-right: 5%">
    <ul>
    <div class="accordion" style="font-size: 20px; color: #2d6987">
      <p><a href="" style="font-family: 'Gabriela'; font-size: 20px; background-color: transparent;
              color: blue ;margin-top: 10% ; color: #000000"> Coming Soon! </a> </p>

      <br/>

      <% @blogs.each do |blog| %>
         <li> <p><a href="<%= blog_path(blog) %>" style="font-family: 'Gabriela'; font-size: 20px; background-color: transparent;
                color: blue ;margin-top: 10% ; color: #000000"> <%= blog.title %></a> </p> </li>
            <br/>
      <% end %>

      <!-- if @blogs.empty? -->
      <!-- end -->

    </div>

    </ul>
  </div>

  <div class="apple_pagination" style="padding-bottom: 8%  ; width: 30%; background-color: transparent; border-color: transparent;
    text-align: center; margin-left: 34%; color: #2d6987">
    <div class="page_info" style="font-family: Consolas; color: #000000">
      <%= page_entries_info @blogs %>
    </div>
    <%= will_paginate @blogs, :container => false %>
  </div>

</div>
